[user]
    name  = statox
    email = adrienfabre@protonmail.com

[core]
    excludesfile = ~/.gitignore_global
    editor       = vim
    # convert windows end of line (CRLF) to unix format(LF)
    autocrlf     = input
    pager = less -+F

[push]
    default = current

[help]
    # When mispelling a fonction automatically correct it
    autocorrect = 5

# Messages coloring
[color]
    ui         = auto
[color "branch"]
    current    = yellow reverse
    local      = yellow
    remote     = green
[color "diff"]
    meta       = yellow bold
    frag       = magenta bold
    old        = red bold
    new        = green bold
[color "status"]
    added      = yellow
    changed    = green
    untracked  = cyan

# Pretty print log
[alias]
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg = !"git lg1"
    l5 = log -n 5

[credential]
    # When not using an ssh key, cache the credentials for about 8 hours
    helper = cache --timeout 28800

[rerere]
    enabled = 1

[mergetool]
    prompt = false
    keepBackup = false
    keepTemporaries = false

[merge]
    tool = winmerge
    stat = true

[mergetool "winmerge"]
    name = WinMerge
    trustExitCode = true
    cmd = winmergeportable.exe -u -e -dl \"Local\" -dr \"Remote\" $LOCAL $REMOTE $MERGED

[diff]
    tool = winmerge

[difftool "winmerge"]
    name = WinMerge
    trustExitCode = true
    cmd = winmergeportable.exe -u -e $LOCAL $REMOTE
