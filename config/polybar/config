; Polybar configuration
; /!\ This file uses glyphs from the font AurulentSansMono patched with nerd font
; If this glyph  doesnt show properly the font might not be installed

[colors]
background = #cc111111
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
underline-highlight = #ffb52a
success = #a9d387
alert = #e8796a
primary = #7ca9dd
warning = #f5a70a

[bar/main]
; The bar is shown on all the monitors thanks to the ./launch.sh script
monitor = ${env:MONITOR:}
width = 100%
height = 27
radius = 1.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2


; To get the name of a font to use
; $ fc-list | grep -i font-name
; Then take what is after the path
font-0 = pango:monospace:pixelsize=10;1
font-1 = OpenSymbol:style=Regular
font-2 = AurulentSansMono Nerd Font:style=Regular:monospace:pixelsize=10;1

modules-left = i3 memory temperature cpu clocks
modules-center = popup-calendar
modules-right = filesystem pulseaudio battery wlan warp eth dunst powermenu

tray-position = right
tray-padding = 2
tray-background = #aa4d4d59

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted =   <label-mounted>
label-mounted =  %{F#0a81f5}%mountpoint%%{F-} %free% %percentage_free%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.alert}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.underline-highlight}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.underline-highlight}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage_used%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.primary}

[module/popup-calendar]
type = custom/script
exec = ~/.config/polybar/scripts/calendar.sh
interval = 5
click-left = ~/.config/polybar/scripts/calendar.sh --popup
format-underline = #0a6cf5

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected = <ramp-signal>  <label-connected>
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = 睊
label-disconnected-foreground = ${colors.alert}

ramp-signal-0 = 直
ramp-signal-foreground = ${colors.success}

[module/eth]
type = internal/network
interface = tun0
interval = 3.0

format-connected-prefix = ""
label-connected = %local_ip%

format-disconnected-prefix = ""
label-disconnected = %ifname% disconnected

[module/warp]
type = internal/network
interface = CloudflareWARP
interval = 3.0

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.success}
label-connected = %local_ip%

format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${colors.alert}
label-disconnected = "No vpn"

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>

label-volume =   %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =   muted
label-muted-foreground = ${colors.foreground-alt}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.success}
bar-volume-foreground-1 = ${colors.success}
bar-volume-foreground-2 = ${colors.success}
bar-volume-foreground-3 = ${colors.success}
bar-volume-foreground-4 = ${colors.success}
bar-volume-foreground-5 = ${colors.warning}
bar-volume-foreground-6 = ${colors.alert}

bar-volume-gradient = false
bar-volume-indicator = 雷
bar-volume-indicator-font = 2

bar-volume-fill = 雷
bar-volume-fill-font = 2

bar-volume-empty = 雷
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <animation-discharging> <label-discharging>

format-full-prefix = 
format-full-prefix-foreground = ${colors.primary}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.success}

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.alert}

[module/powermenu]
type = custom/text
content = 

click-left = ~/.config/rofi/powermenu/powermenu.sh

[module/clocks]
type= custom/script
exec = ~/.config/polybar/scripts/clocks.sh

[module/dunst]
type = custom/script
exec = ~/.config/polybar/scripts/dunst/status.sh
click-left = ~/.config/polybar/scripts/dunst/toggle.sh

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

; vim:ft=dosini
